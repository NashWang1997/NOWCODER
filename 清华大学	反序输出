#include <iostream>
#include <cstdlib>
using namespace std;

int main()
{
    char input[4];
    while (scanf("%s", &input) != EOF) {
        char output[5];
        for (int i=0; i<4; ++i) {
            output[i] = input[3-i];
            //printf("%c\n", input[i]);
        }
        output[4] = '\0';
        printf("%s", output);
    }
    return 0;
}
